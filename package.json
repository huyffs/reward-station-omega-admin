	"private": true,
	"scripts": {
		"local": "vite dev --host 0.0.0.0 --port 2610",
		"dev": "vite dev --host 0.0.0.0 --port 2710",
		"prod": "vite dev --host 0.0.0.0 --port 2810",
		"build": "vite build",
